<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dine_blue">

    <ImageView
        android:src="@drawable/dine_text"
        android:id="@+id/dinetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dinetext"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/backcardview"
                android:layout_width="match_parent"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="@android:color/transparent"
                style="@style/dineCardViewStyle"
                android:layout_height="wrap_content"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dine_1_background_1"
                    android:id="@+id/dine_1_background_1"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY" />

            </com.google.android.material.card.MaterialCardView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dine_1_background_2"
                android:layout_below="@+id/backcardview"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"/>

            <Button
                android:id="@+id/preferences_button"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@drawable/preferences_icon"
                android:backgroundTint="@null"
                android:layout_below="@id/backcardview"
                android:layout_alignParentRight="true"
                android:layout_marginTop="28dp"
                android:layout_marginRight="9dp"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>






</RelativeLayout>