<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:paddingTop="1dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/borderline"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/menu_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Menu Item"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <TextView

        app:layout_constraintLeft_toLeftOf="@id/menu_item_name"
        app:layout_constraintTop_toBottomOf="@id/menu_item_name"
        android:layout_marginLeft="2dp"
        android:id="@+id/menu_item_nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="sample menu nutrition"
        android:textSize="16sp"/>
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/menu_item_name"
        app:layout_constraintTop_toBottomOf="@id/menu_item_nutrition"
        android:layout_marginLeft="2dp"
        android:paddingBottom="10dp"
        android:id="@+id/menu_item_price"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="$sample menu price"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/borderline"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0.25dp"
        android:layout_height="0dp"
        android:src="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>