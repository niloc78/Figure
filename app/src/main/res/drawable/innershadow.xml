<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <gradient android:startColor="#CCCCCC" android:centerColor="@color/white" android:type="linear" android:endColor="@color/white" android:angle="-90"/>
            <corners android:radius="7dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:top="1px" android:left="4px" android:right="4px">

        <shape  android:shape="rectangle">

            <solid android:color="#FFFFFF" />
            <corners android:radius="7dp" />


        </shape>

    </item>
</layer-list>