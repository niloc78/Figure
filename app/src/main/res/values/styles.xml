<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="side_bar_cook_icon_style" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="icon">@drawable/cook_side_icon_selector_style</item>
    </style>

    <style name="side_bar_dine_icon_style" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="icon">@drawable/dine_side_icon_selector_style</item>
    </style>

    <style name="side_bar_delivery_icon_style" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="icon">@drawable/delivery_side_icon_selector_style</item>
    </style>

    <style name="text_appearance_default" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="listSpacing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="listPreferredItemHeightSmall">70dp</item>
    </style>

    <style name="ingredCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ingredCardViewShapeAppearanceOverlay</item>
    </style>

    <style name="ingredCardViewShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">59dp</item>
    </style>
    <style name="recipeCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/recipeCardViewShapeAppearanceOverlay</item>
    </style>
    <style name="recipeCardViewShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">59dp</item>
    </style>

    <style name="ingredCardListStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ingredCardListShapeAppearanceOverlay</item>
        <item name="android:shadowRadius">70</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">3</item>
    </style>
    <style name="ingredCardListShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">41dp</item>
        <item name="cornerSizeTopLeft">41dp</item>
        <item name="cornerSizeBottomLeft">41dp</item>
        <item name="cornerSizeBottomRight">41dp</item>
    </style>


</resources>